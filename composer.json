{
    "name": "usmanmohammad/craft-azurestorage",
    "description": "A Craft CMS plugin allowing you to upload files to an Azure Storage Account.",
    "keywords": ["Craft", "Azure", "Blob", "Storage"],
	"type": "craft-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Usman Mohammad",
            "email": "contact@usman.mx",
            "homepage": "https://github.com/usmanmohammad/craft-azurestorage"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "JonnyW\\AWSS3Assets\\": "src/JonnyW/AWSS3Assets/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=5.6.0",
        "composer/installers": "~1.0",
        "microsoft/azure-storage": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0",
        "symfony/phpunit-bridge": "~3.1"
    }
}
